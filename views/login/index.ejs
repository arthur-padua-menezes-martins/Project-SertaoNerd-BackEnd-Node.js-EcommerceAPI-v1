

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

<div class="container">
    <div class="row">
        <div class="col-sm-3 col-sm-offset-3">
            <h2>LOGAR-SE</h2> <hr> <br>

            <% if(success) { %>
                <div class="alert alert-success">
                    <%= success %>
                </div>
            <%  } %>

            <% if(errors) { %>
                <div class="alert alert-danger">
                    <%= errors %>
                </div>
            <%  } %>

            <form action="/login" method="post">

                <div class="form-goup">

                    <input class="form-control" placeholder="digite seu e-mail" type="text" name="email" />
                    <input class="form-control" placeholder="digite sua senha" type="text" name="password" />

                </div>

                <button class="btn btn-primary" type="submit">LOGIN</button>
            
            </form>

        </div>
    </div>
</div>

<% if(token) { %>
   
    <div style="max-width:500px; word-wrap:break-word;" class="alert alert-success">

            <%= token %>

    </div>
    
<%  } %>